<Page x:Class="RecordPro.CalendarAd"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  mc:Ignorable="d"
	  d:DesignHeight="300"
	  d:DesignWidth="500"
	  Title="CalendarAd">
	<Grid Background="Black">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Image Source="pack://application:,,,/View Calendar.png" />
		<TextBlock Text="Calendar view allows you to dynamically view and change all assignments for each student. It features subtle animations and many images."
				   Grid.Row="1"
				   Style="{DynamicResource AdTextStyle}" />
	</Grid>
</Page>
